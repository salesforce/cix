{
    "git.ignoreLimitWarning": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "eslint.options": { "configFile": ".eslintrc.json" },
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "cSpell.words": [
        "DDTHH",
        "Entrypoint",
        "JSYAML",
        "Kubernetes",
        "Startable",
        "authconfig",
        "backgroundprocess",
        "backoff",
        "camelcase",
        "cixconfig",
        "cixrc",
        "configfile",
        "deepdash",
        "demux",
        "dind",
        "dockerode",
        "docsify",
        "finalizer",
        "foofoo",
        "imagename",
        "jsdocrc",
        "kube",
        "kubelet",
        "libexec",
        "loglevel",
        "muxed",
        "preid",
        "prepro",
        "preprocessors",
        "printf",
        "sprintf",
        "utests",
        "uuidv",
        "yamls"
    ],
    "cSpell.ignorePaths": [
        "*.json",
        "*.yaml"
    ]
}